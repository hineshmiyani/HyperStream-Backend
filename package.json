{
  "name": "hyperstream-backend",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config ./src/app.ts",
    "dev": "nodemon",
    "build": "tsc",
    "format:check": "prettier --ignore-path .gitignore --check \"src/**/*.{js,mjs,cjs,ts,json}\"",
    "format:write": "prettier --ignore-path .gitignore --write \"src/**/*.{js,mjs,cjs,ts,json}\"",
    "lint:check": "eslint --ignore-path .gitignore \"src/**/*.{js,mjs,cjs,ts,json}\"",
    "lint:fix": "eslint --ignore-path .gitignore --fix \"src/**/*.{js,mjs,cjs,ts,json}\"",
    "prepare": "husky"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.0.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3"
  },
  "lint-staged": {
    "src/**/*.{js,mjs,cjs,ts}": [
      "eslint"
    ],
    "src/**/*.{js,mjs,cjs,ts,json}": [
      "prettier --write"
    ]
  }
}
